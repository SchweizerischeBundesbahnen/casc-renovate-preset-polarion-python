{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": [
    "Default Renovate preset for Polarion Python repos"
  ],
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "automergeType": "branch",
  "platformAutomerge": true,
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": [
      "schedule:weekly"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge pre-commit hooks",
      "matchManagers": [
        "pre-commit",
        "github-actions"
      ],
      "automerge": true
    },
    {
      "description": "Automerge dev dependencies",
      "matchDepTypes": [
        "dev-dependencies",
        "test"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "postUpdateOptions": [
        "poetry-lock"
      ]
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
