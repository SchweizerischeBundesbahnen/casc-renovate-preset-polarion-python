{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default Renovate preset for Python repositories maintained by the SBB Polarion Team.",
  "extends": [
    "config:best-practices",
    ":semanticCommits"
  ],
  "enabledManagers": [
    "pep621",
    "poetry",
    "pre-commit",
    "github-actions",
    "renovate-config-presets",
    "custom.regex"
  ],
  "automergeType": "branch",
  "platformAutomerge": true,
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "minimumReleaseAge": "3 days",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 4am on monday"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge pre-commit hooks and GitHub Actions",
      "matchManagers": [
        "pre-commit",
        "github-actions"
      ],
      "automerge": true
    },
    {
      "description": "DEPRECATED: Poetry support - Remove after migration to uv is complete",
      "matchManagers": [
        "poetry"
      ],
      "postUpdateOptions": [
        "poetry-lock"
      ]
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    },
    {
      "description": "Security vulnerabilities - immediate PR creation without stabilization wait",
      "matchDatasources": [
        "osv-offline"
      ],
      "minimumReleaseAge": "0 days"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "automerge": false
  },
  "constraints": {
    "python": ">=3.12"
  }
}
