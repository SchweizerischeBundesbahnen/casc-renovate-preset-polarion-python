{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default Renovate preset for Python repositories maintained by the SBB Polarion Team.",
  "extends": [
    "config:best-practices",
    ":semanticCommits"
  ],
  "enabledManagers": [
    "pep621",
    "poetry",
    "pre-commit",
    "github-actions",
    "custom.regex"
  ],
  "dependencyDashboard": true,
  "automergeType": "branch",
  "platformAutomerge": true,
  "branchConcurrentLimit": 3,
  "prCreation": "status-success",
  "rebaseWhen": "behind-base-branch",
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 4am on monday"
    ],
    "minimumReleaseAge": null
  },
  "packageRules": [
    {
      "description": "DEPRECATED: Poetry support - Remove after migration to uv is complete",
      "matchManagers": [
        "poetry"
      ],
      "postUpdateOptions": [
        "poetry-lock"
      ]
    },
    {
      "description": "Automerge non-major updates (minor, patch, pin, digest)",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Automerge GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "description": "pre-commit hooks - Automerge even if tests fail (low-risk tooling updates)",
      "matchManagers": [
        "pre-commit"
      ],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "description": "Major updates require manual review (potential breaking changes)",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "automerge": false
  },
  "constraints": {
    "python": ">=3.12"
  }
}
