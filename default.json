{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": [
    "Default Renovate preset for Polarion Python repos"
  ],
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":enablePreCommit"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "automergeType": "branch",
  "platformAutomerge": true,
  "prCreation": "not-pending",
  "packageRules": [
    {
      "matchManagers": [
        "pre-commit"
      ],
      "automerge": true
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "postUpdateOptions": [
        "poetry-lock"
      ]
    },
    {
      "matchPackageNames": ["googleapis/release-please-action"],
      "allowedVersions": "<=3"
    }
  ]
}
